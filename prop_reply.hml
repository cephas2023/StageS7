%Make Sure that the server reply to the client that make the request

with
  morpion_server:loop(_,_,_,_,_,_,_,_)
monitor
  and([_ <- _, morpion_server:loop(_,_,_,_,_,_,_,_)]
    max(X.
      and([Srv_1 ? {Clt_1, _}]
        max(Y.
          and(
            [Srv_2:Clt_2 ! _ when Srv_1 =:= Srv_2 andalso Clt_1 =/= Clt_2]ff,
            [Srv_2:Clt_2 ! _ when Srv_1 =:= Srv_2 andalso Clt_1 =:= Clt_2]X,
            [_ ? _]Y
          )
        )
      )
    )
  ).